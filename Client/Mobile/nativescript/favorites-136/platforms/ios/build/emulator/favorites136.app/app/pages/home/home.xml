<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:lv="nativescript-telerik-ui/listview"
  xmlns:lk="nativescript-telerik-ui/link"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  xmlns:statusbar="nativescript-statusbar"
  loaded="pageLoaded">

  <statusbar:StatusBar ios:barStyle="light" />

  <page.actionBar>
    <action-bar title="CSE 136 Favorites">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>

  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

      <!-- Home page contents -->
      <lv:RadListView id="list-view" items="{{ items }}" itemTap="launch"  itemSwipe="true"
                      itemSwipeProgressStarted="itemSwipeProgressStarted"
                      itemSwipeProgressEnded="itemSwipeProgressEnded">

        <lv:RadListView.listViewLayout>
          <lv:ListViewLinearLayout scrollDirection="Vertical" />
        </lv:RadListView.listViewLayout>

        <lv:RadListView.itemTemplate>
          <StackLayout orientation="vertical" >
            <Label text="{{ name }}" horizontalAlignment="center" />
          </StackLayout>
        </lv:RadListView.itemTemplate>

        <lv:RadListView.itemSwipeTemplate>
          <GridLayout columns="100 *, 100" rows="auto *, auto">
            <StackLayout col="0" backgroundColor="green">
              <Label text="Star" color="white" style.fontSize="10" style.horizontalAlignment="left" />
            </StackLayout>
            <StackLayout col="2" backgroundColor="red">
              <Label text="Delete" color="white" style.fontSize="10" style.horizontalAlignment="right" />
            </StackLayout>
          </GridLayout>
        </lv:RadListView.itemSwipeTemplate>

      </lv:RadListView>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
