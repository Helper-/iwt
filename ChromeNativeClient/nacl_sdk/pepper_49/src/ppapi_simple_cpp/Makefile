# GNU Makefile based on shared rules provided by the Native Client SDK.
# See README.Makefiles for more details.

VALID_TOOLCHAINS := pnacl glibc clang-newlib
NACL_SDK_ROOT ?= $(abspath $(CURDIR)/../..)

TARGET = ppapi_simple_cpp

include $(NACL_SDK_ROOT)/tools/common.mk

LIBS = $(DEPS)

ppapi_simple_cpp_real_CFLAGS = -Wall
ppapi_simple_cpp_real_SOURCES = ps.c \
  ps_context_2d.c \
  ps_entrypoints_cpp.cc \
  ps_event.c \
  ps_instance.c \
  ps_interface.c \
  ps_main.c \
  ps_main_default.c


all: install

# Build rules generated by macros from common.mk:

$(eval $(call LINKER_SCRIPT_RULE,ppapi_simple_cpp,ppapi_simple_cpp.a.linkerscript,ppapi_simple_cpp.so.linkerscript))

$(foreach src,$(ppapi_simple_cpp_real_SOURCES),$(eval $(call COMPILE_RULE,$(src),$(ppapi_simple_cpp_real_CFLAGS))))
$(eval $(call LIB_RULE,ppapi_simple_cpp_real,$(ppapi_simple_cpp_real_SOURCES)))
ifneq (,$(findstring $(TOOLCHAIN),glibc))
$(eval $(call SO_RULE,ppapi_simple_cpp_real,$(ppapi_simple_cpp_real_SOURCES),$(LIBS),$(DEPS)))
endif

